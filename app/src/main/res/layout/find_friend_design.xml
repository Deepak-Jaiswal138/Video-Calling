<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view">
        <ImageView
            android:layout_width="280dp"
            android:layout_height="220dp"
            android:id="@+id/image_notification"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_image"
            android:layout_marginTop="15dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_notification"
            android:textColor="@color/colorPrimary"
            android:text="username"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_below="@+id/image_notification"
            android:layout_marginTop="5dp"
            android:textSize="18sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_notification"
            android:id="@+id/request_accept_btn"
            android:text="Accept Friend Request"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="79dp"
            android:layout_marginRight="79dp"
            android:padding="5dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:visibility="gone"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_accept_btn"
            android:id="@+id/request_decline_btn"
            android:text="Cancel Friend Request"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="79dp"
            android:layout_marginRight="79dp"
            android:layout_marginBottom="12dp"
            android:padding="5dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:visibility="gone"/>
    </RelativeLayout>




</androidx.cardview.widget.CardView>